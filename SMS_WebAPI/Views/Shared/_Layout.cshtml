<!DOCTYPE html>
<html dir=@Resources.SMSResource.dir>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="~/">School Dashboard</a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink(@Resources.SMSResource.home, "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink(@Resources.SMSResource.students, "Index", "Student", new { area = "" }, null)</li>                        
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/App_GlobalResources/JSResource.js")
    @Scripts.Render("~/App_GlobalResources/JSResource.ar-EG.js")
        
    @RenderSection("scripts", required: false)
</body>
</html>
