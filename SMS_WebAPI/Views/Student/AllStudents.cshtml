<div ng-init="studentCtrl.getAllStudents()" >
    {{studentCtrl.helper.message}}    
    <input type="text" id="studentNameSearch" list="studentsDatalist" placeholder="@Resources.SMSResource.searchPlaceholder" class="search" />
    <div>@Resources.SMSResource.SelectStudent</div>
    <datalist id="studentsDatalist" >
        <option ng-repeat="student in studentCtrl.students">{{student.FirstName +" "+ student.Father.FullName}}</option>
        
    </datalist>
    <div class="scrollable" >
        <div ng-repeat="student in studentCtrl.students">
            <div>{{student.FirstName +" "+ student.Father.FullName}}</div>
        </div>
    </div>
</div>
@Styles.Render("~/Content/SmsStyles/Controls.css")
